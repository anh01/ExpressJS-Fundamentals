{{#each articles}}

    <h2>{{this.title}}</h2>
    <p>{{this.description}}</p>
    <form action="/article/details/{{this._id}}" method="post">
    <input type="submit" value="Get details">
    </form>


    <form action="/article/edit/{{this._id}}">
        <input type="submit" value="Edit">
    </form>

    <form action="/article/delete/{{this._id}}" method="post">
        <input type="submit" value="Delete">
    </form>


{{/each}}



